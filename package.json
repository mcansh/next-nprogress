{
  "name": "@mcansh/next-nprogress",
  "version": "1.1.2",
  "description": "Easily integrate NProgress inside your Next.js app using styled-components",
  "repository": "mcansh/next-nprogress",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "source": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/next-nprogress.esm.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./ --ext js,ts,tsx --fix",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "validate": "yarn lint && yarn format && yarn type-check && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix",
      "sh scripts/ts-precommit.bash",
      "yarn test --bail --findRelatedTests",
      "git add"
    ],
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@types/nprogress": "0.2.0",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/styled-components": "4.1.18",
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "@typescript-eslint/parser": "2.0.0",
    "eslint": "6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-kentcdodds": "14.4.0",
    "eslint-config-mcansh": "2.1.1",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "2.0.1",
    "husky": "3.0.4",
    "lint-staged": ">=9.2.5",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "tsdx": "0.9.0",
    "tslib": "1.10.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "next": "9.3.2",
    "next-server": "9.0.5",
    "nprogress": "0.2.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "styled-components": "4.3.2"
  },
  "peerDependencies": {
    "next": ">=8.0.0",
    "next-server": ">=8.0.0",
    "nprogress": "^0.2.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=4.0.0"
  }
}
